{
  "ts-node": {
    "files": true,
    "require": [
      "tsconfig-paths/register"
    ]
  },
  "compilerOptions": {
    "baseUrl": "src/",
    "outDir": "./dist/",

    // Node.js 16
    "lib": [
      "es2021",
      "dom"
    ],
    "module": "commonjs",
    "target": "ES2021",
    "moduleResolution": "node",
    "esModuleInterop": true,

    "sourceMap": true,
    "removeComments": false,
    "resolveJsonModule": true,
    "newLine": "lf",

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "strict": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,

    "forceConsistentCasingInFileNames": true,
    "exactOptionalPropertyTypes": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "noEmitOnError": true,
    "preserveConstEnums": true,

    "paths": {
      "app": [
        "app"
      ],
      "common": [
        "common"
      ],
      "boundaries": [
        "boundaries"
      ],
      "config": [
        "config"
      ],
      "database": [
        "database"
      ],
      "errors": [
        "errors"
      ],
      "features": [
        "features"
      ],
      "libs": [
        "libs"
      ],
      "logger": [
        "logger"
      ],
      "middlewares": [
        "middlewares"
      ]
    }
  },
  "typeRoots": [
    "types",
    "node_modules/@types"
  ],
  "include": [
    "./src/**/**/*",
    "jest.e2e.config.ts",
    "jest.config.ts",
    "swagger.generate.ts",
    "./types/**/**/*",
    "./test/**/**/*",
    "./prisma/**/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
